<?xml version="1.0" encoding="utf-8"?>
<odoo>    <template id="raffle_template" name="Rifa">
        <t t-call="rifas.rifas_layout">
            <t t-set="title" t-value="rifa.name + ' - WebbyRifas'"/>
            
            <!-- Include raffle-specific CSS -->
            <t t-set-slot="head">
                <link rel="stylesheet" href="/rifas/static/css/raffle.css"/>
            </t>
            
            <section class="hero">
                <div class="hero__container">
                    <div class="hero__feature_image">
                        <img t-att-src="rifa.image_feature_url" alt="Imagen de la rifa"/>
                    </div>
                    <div class="hero__content">
                        <span class="hero__price">
                            <t t-esc="rifa.price"/>
                            $ EL TICKET</span>
                        <h1 class="hero__title">
                            <t t-esc="rifa.name"/>
                        </h1>
                        <div class="hero__description">
                            <t t-esc="rifa.description"/>
                        </div>
                    </div>                </div>
            </section>

            <t t-call="rifas.rifas_gallery"/>
            <section class="ticket-selector" t-att-data-raffle-id="rifa.id" t-att-data-price="rifa.price">
                <div class="ticket-selector__stats">
                    <span>Tickets Disponibles: <strong>
                        <t t-esc="rifa.ticket_available"/>
                    </strong></span>
                    <span>Tickets Vendidos: <strong>
                        <t t-esc="rifa.ticket_sold"/>
                    </strong></span>
                </div>
                <h2 class="ticket-selector__title">Seleccione los n√∫meros a comprar</h2>
                <div class="ticket-selector__grid">
                    <t t-foreach="tickets_disponibles" t-as="disponible">
                        <button class="ticket-selector__number" 
                                t-att-data-number="disponible['number']">
                            <t t-esc="disponible['number']"/>
                        </button>
                    </t>
                </div>
                <div class="ticket-selector__summary">
                    <p>Tickets: <span id="ticket-count">0</span></p>
                    <p>Total: $<span id="ticket-total">0.00</span></p>
                </div>
                <button class="button button-checkout" disabled="disabled">Comprar Tickets</button>
            </section>

            <t t-call="rifas.rifas_payment_methods"/>
            <t t-call="rifas.rifas_faq"/>
        </t>
    </template>
</odoo>